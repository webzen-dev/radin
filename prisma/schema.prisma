generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model Project {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  brand       String
  image       String
  category    String
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  email    String    @unique
  password String
  role     String    @default("USER")
  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  username  String
  User      User     @relation(fields: [username], references: [username])
}
